[Unit]

[Container]
ContainerName=penpot_exporter
Environment=PENPOT_PUBLIC_URI=http://10.10.0.9:8080
Environment=PENPOT_REDIS_URI=redis://10.10.0.5/0
Image=ghcr.io/ngarside/penpot-exporter:latest
IP=10.10.0.7
Network=internal
ReadOnly=true
UserNS=auto:size=256

[Service]
Restart=always
TimeoutStartSec=300

[Install]
WantedBy=default.target
