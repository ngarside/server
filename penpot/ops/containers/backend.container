[Unit]
After=authentik_server.container
After=penpot_postgres.container
After=penpot_valkey.container
Requires=authentik_server.container
Requires=penpot_postgres.container
Requires=penpot_valkey.container

[Container]
ContainerName=penpot_backend
Environment="PENPOT_FLAGS=disable-registration disable-secure-session-cookies enable-login-with-oidc enable-oidc-registration"
Environment=PENPOT_HTTP_SERVER_MAX_BODY_SIZE=31457280
Environment=PENPOT_HTTP_SERVER_MAX_MULTIPART_BODY_SIZE=367001600
Environment=PENPOT_DATABASE_URI=postgresql://10.4.0.3/penpot
Environment=PENPOT_DATABASE_USERNAME=penpot
Environment=PENPOT_PUBLIC_URI=https://penpot.usani.uk
Environment=PENPOT_REDIS_URI=redis://10.4.0.2/0
Environment=PENPOT_ASSETS_STORAGE_BACKEND=assets-fs
Environment=PENPOT_STORAGE_ASSETS_FS_DIRECTORY=/opt/data/assets
Environment=PENPOT_OIDC_CLIENT_ID=penpot
Environment=PENPOT_OIDC_BASE_URI=https://usani.uk/application/o/penpot/
Image=ghcr.io/ngarside/penpot-backend:2.10.0.37
Network=penpot_internal.network:ip=10.4.0.5
Network=penpot_external.network:ip=10.3.0.8
NoNewPrivileges=true
ReadOnly=true
Secret=penpot_oidc_secret,type=env,target=PENPOT_OIDC_CLIENT_SECRET
Secret=penpot_postgres_password,type=env,target=PENPOT_DATABASE_PASSWORD
Volume=/var/data/penpot/assets:/opt/data/assets:z

[Service]
Restart=always
TimeoutStartSec=9000
ExecStartPre=mkdir --parents /var/data/penpot/assets
ExecStartPre=podman unshare chown 1001:1001 /var/data/penpot/assets

[Install]
WantedBy=default.target
