[Unit]

[Container]
ContainerName=memos
Image=ghcr.io/ngarside/memos:latest
IP=10.6.0.2
Network=memos.network
Volume=/var/data/memos/opt:/opt/memos:U,Z

[Service]
Restart=always
TimeoutStartSec=300
ExecStartPre=mkdir --parents /var/data/memos/opt

[Install]
WantedBy=default.target
