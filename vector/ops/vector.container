[Unit]

[Container]
ContainerName=vector
Image=ghcr.io/ngarside/vector:latest
Network=vector.network:ip=10.15.0.2
Volume=/etc/pki/ca-trust/extracted/pem:/etc/pki/ca-trust/extracted/pem:O
Volume=/etc/vector/vector.toml:/etc/vector/vector.toml:ro

[Service]
Restart=always
TimeoutStartSec=300

[Install]
WantedBy=default.target
