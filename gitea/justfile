# This is free and unencumbered software released into the public domain.

_default:
	just --list

build:
	docker build --file src/gitea.dockerfile --tag ghcr.io/ngarside/gitea:latest .

run: stop
	docker run --detach --name gitea --publish 8080:80 --read-only \
		--volume {{ replace(justfile_directory(), '\', '/') }}/bin/etc:/usr/bin/etc \
		--volume {{ replace(justfile_directory(), '\', '/') }}/bin/log:/var/log \
		--volume {{ replace(justfile_directory(), '\', '/') }}/bin/data:/usr/bin/data \
		ghcr.io/ngarside/gitea:latest

stop:
	docker stop gitea || true
