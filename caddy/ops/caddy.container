[Unit]

[Container]
ContainerName=caddy
Image=ghcr.io/ngarside/caddy:latest
Network=internal
PublishPort=80:80/tcp
ReadOnly=true
UserNS=auto:size=8
Volume=/etc/caddy:/etc/caddy:ro

[Service]
Restart=always
TimeoutStartSec=300

[Install]
WantedBy=default.target
