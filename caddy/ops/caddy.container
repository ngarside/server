[Unit]

[Container]
ContainerName=caddy
Image=ghcr.io/ngarside/caddy:latest
Network=internal.network:ip=10.10.0.2
Network=systemd-fossflow.network:ip=10.1.0.3
PublishPort=80:80/tcp
ReadOnly=true
UserNS=auto:size=8
Volume=/etc/caddy:/etc/caddy:ro

[Service]
Restart=always
TimeoutStartSec=300

[Install]
WantedBy=default.target
