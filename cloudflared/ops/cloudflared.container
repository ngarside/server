[Unit]

[Container]
ContainerName=cloudflared
EnvironmentFile=/etc/cloudflared/cloudflared.env
Exec=tunnel --no-autoupdate run
Image=docker.io/cloudflare/cloudflared:2025.8.0
Network=cloudflared.network:ip=10.13.0.2
NoNewPrivileges=true
ReadOnly=true

[Service]
Restart=always
TimeoutStartSec=300

[Install]
WantedBy=default.target
